            </svg>
        }
        else
        {
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.99978 8.29499L11.7189 3.67284C11.9299 3.46661 12.2675 3.46822 12.4759 3.67715L13.303 4.50422C13.5135 4.71476 13.513 5.05668 13.3019 5.26722L7.38047 11.1499C7.27547 11.2549 7.13762 11.3077 6.99978 11.3077C6.86193 11.3077 6.72408 11.2549 6.61908 11.1499L0.697623 5.26722C0.486007 5.05722 0.485469 4.7153 0.696546 4.50422L1.52362 3.67715C1.73201 3.46876 2.07016 3.46661 2.2807 3.67284L6.99978 8.29499Z" fill="black"/>
            </svg>
        }
    </div>
</button>

@code {
    private bool State { get; set; } = false;
    [Parameter] public string Label { get; set; }
    [Parameter] public Action<bool> OnToggle { get; set; }
}