@rendermode InteractiveServer

<button @onclick="() => { State = !State; OnToggle?.Invoke(State); }" class="btn-container-wide-toggler font-16">
    <span>@Label</span>
    <div>
        @if (!State)
        {
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
